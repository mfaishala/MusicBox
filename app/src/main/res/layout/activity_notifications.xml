<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifications"
    android:background="#151515"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Notifications"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar_1_2"
        app:itemIconSize="35dp"
        app:itemIconTint="#FF1F00"
        app:itemTextColor="#FF1F00"
        app:menu="@menu/menu_bottom_1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="800dp">

            <ImageButton
                android:id="@+id/back_notif_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/ic_back"
                android:clickable="true"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="118dp"
                android:text="What's New"
                android:textColor="#FFFF"
                android:textSize="27dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="154dp"
                android:text="Music, Albums, Single"
                android:textColor="#FFFF"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/music_notif_button"
                android:layout_width="55dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/ic_button_music_notif"
                android:clickable="true"
                />

            <TextView
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="240dp"
            android:text="New"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />



            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="800dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="284dp"
                android:layout_marginLeft="27dp"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView

                    android:id="@+id/Recently_Played_1"
                    android:layout_width="306dp"
                    android:layout_height="70dp"
                    android:paddingTop="0dp"
                    android:backgroundTint="#151515"
                    app:cardCornerRadius="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/img_song1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/recentlyplayed_4" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/judul_music_1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="15dp"
                        android:text="Make Me Move (feat. Karra) [NCS]"
                        android:textColor="#FFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/artist_1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="37dp"
                        android:text="Culture Code"
                        android:textColor="#FFFF"
                        android:textSize="12dp" />

                </androidx.cardview.widget.CardView>

                //2
                <androidx.cardview.widget.CardView

                    android:id="@+id/Recently_Played_2"
                    android:layout_width="306dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#151515"
                    app:cardCornerRadius="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/img_song2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/recentlyplayed_1" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/judul_music_2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="15dp"
                        android:text="On and On (feat. Daniel Levi) [NCS Release]"
                        android:textColor="#FFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/artist_2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="37dp"
                        android:text="Cartoon"
                        android:textColor="#FFFF"
                        android:textSize="12dp" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>







        </RelativeLayout>
    </ScrollView>

</RelativeLayout>