<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".Library">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Profile_page"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar_1_2"
        app:menu="@menu/menu_bottom_1"
        app:itemIconTint="#FF1F00"
        app:itemIconSize="35dp"
        app:itemTextColor="#FF1F00"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="800dp">

            <ImageView
                android:layout_width="360dp"
                android:layout_height="380dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_profile" />


            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="265dp"
                app:cardCornerRadius="120dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gambar_contoh"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="276dp"
                android:text="Your Account"
                android:textColor="#FFFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="154dp"
                android:layout_height="18dp"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="306dp"
                android:text="youraccount@gmail.com"
                android:textColor="#FFFF"
                android:textSize="12dp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/button_notif_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="301dp"
                android:layout_marginTop="284dp"
                android:background="@drawable/ic_notif_putih"
                android:clickable="true"
                />

            <TextView
                android:layout_width="66dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="390dp"
                android:text="Account"
                android:textColor="#FFFF"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="304dp"
                android:layout_height="285dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="426dp"
                android:orientation="vertical">

                //Email

                <androidx.cardview.widget.CardView
                    android:layout_width="304dp"
                    android:layout_height="46dp"
                    android:backgroundTint="#151515">

                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="23dp"
                        android:text="Email"
                        android:textColor="#FFFF"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="304dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ic_button_view_profile"
                        android:text="youraccount@gmail.com"
                        android:textColor="#FFFF"
                        android:textSize="12dp" />

                </androidx.cardview.widget.CardView>

                //Email

                <androidx.cardview.widget.CardView
                    android:layout_width="304dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#151515">

                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="23dp"
                        android:text="Password"
                        android:textColor="#FFFF"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="304dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ic_button_view_profile"
                        android:text="Change Password"
                        android:textColor="#FFFF"
                        android:textSize="12dp" />

                </androidx.cardview.widget.CardView>

                //Notifications

                <androidx.cardview.widget.CardView
                    android:layout_width="304dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#151515">

                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="23dp"
                        android:text="Notifications"
                        android:textColor="#FFFF"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="304dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ic_button_switch_notif"
                        android:text="MusicBox Notifications"
                        android:textColor="#FFFF"
                        android:textSize="12dp" />

                </androidx.cardview.widget.CardView>

                //Logout

                <androidx.cardview.widget.CardView
                    android:layout_width="305dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#151515">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="23dp"
                        android:text="Logout Account"
                        android:textColor="#FFFF"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="304dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ic_button_logout"
                        android:text="youraccount@gmail.com"
                        android:textColor="#FFFF"
                        android:textSize="12dp"
                        android:clickable="true"
                        />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>