<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#151515"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Search_Page"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar_1_2"
        app:menu="@menu/menu_bottom_1"
        app:itemIconTint="#FF1F00"
        app:itemIconSize="35dp"
        app:itemTextColor="#FF1F00"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">


            <ImageButton
                android:id="@+id/Notifikasi_search"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/ic_notifcation"
                android:clickable="true" />


            <ImageButton
                android:id="@+id/back_search"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_back"
                android:clickable="true" />


            //Album Kiri
            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="750dp"
                android:layout_marginTop="200dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/album_01"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/album_04"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/album_02"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/album_01"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_03"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            //Album Kanan
            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="750dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="200dp"
                android:layout_marginRight="28dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_03"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_04"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_01"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_02"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="142dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" 
                        android:background="@drawable/album_01"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <ImageView
                android:layout_width="306dp"
                android:layout_height="46dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="115dp"
                android:layout_marginRight="27dp"
                android:src="@drawable/shape_search" />
            
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="123dp"
                android:background="@drawable/ic_search2"
                />

            <EditText
                android:layout_width="240dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="119dp"
                android:backgroundTint="#1F1F20"
                android:hint="Search"
                android:textColor="#C5C5C5"
                android:inputType="text"
                android:textColorHint="#C5C5C5"
                android:textColorLink="#1F1F20"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>