<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".Library">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Libarary_page"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar_1_2"
        app:menu="@menu/menu_bottom_1"
        app:itemIconTint="#FF1F00"
        app:itemIconSize="35dp"
        app:itemTextColor="#FF1F00"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            >

            <ImageView
                android:layout_width="360dp"
                android:layout_height="380dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_libarary" />


            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="265dp"
                app:cardCornerRadius="120dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/profile_01"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:text="Your Library"
                android:textColor="#FFFF"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="276dp"
                android:layout_marginLeft="107dp"
                />
            <TextView
                android:layout_width="154dp"
                android:layout_height="18dp"
                android:text="youraccount@gmail.com"
                android:textColor="#FFFF"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginTop="306dp"
                android:layout_marginLeft="107dp"
                />

            <ImageButton
                android:id="@+id/button_notif_library"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="301dp"
                android:layout_marginTop="284dp"
                android:background="@drawable/ic_notif_putih"
                android:clickable="true"
                />

            //Liked Song

            <LinearLayout
                android:layout_width="307dp"
                android:layout_height="280dp"
                android:layout_marginTop="390dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/Liked_Song"
                    android:layout_width="307dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#1F1F20"
                    app:cardCornerRadius="13dp"
                    android:clickable="true"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/profile_02" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="211dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="29dp"
                        android:drawableRight="@drawable/ic_next_library"
                        android:text="Liked Song"
                        android:textColor="#FFFF"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>

                //2
                <androidx.cardview.widget.CardView
                    android:id="@+id/My_Playlist"
                    android:layout_width="307dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#1F1F20"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="13dp"
                    android:clickable="true"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/profile_03" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="211dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="29dp"
                        android:drawableRight="@drawable/ic_next_library"
                        android:text="My Playlist"
                        android:textColor="#FFFF"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>

                //3
                <androidx.cardview.widget.CardView
                    android:id="@+id/My_Following"
                    android:layout_width="307dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#1F1F20"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="13dp"
                    android:clickable="true"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/profile_04" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="211dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="29dp"
                        android:drawableRight="@drawable/ic_next_library"
                        android:text="My Following"
                        android:textColor="#FFFF"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>





        </RelativeLayout>
    </ScrollView>

</RelativeLayout>