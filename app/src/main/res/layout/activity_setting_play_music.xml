<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Play_Music"
    android:background="#151515"
    >


        <ImageButton
            android:id="@+id/exit_setting_plying"
            android:layout_width="39.38dp"
            android:layout_height="39.38dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_exit_setting_plymusic" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="143dp"
            app:cardCornerRadius="15dp"
            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="265dp"
                android:background="@drawable/playing_music_01"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/judul_music"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="418dp"
            android:singleLine="true"
            android:text="On and On (feat. Daniel Levi) [NCS Release]"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="22dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="448dp"
            android:text="Cartoon"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="13dp" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="516dp"
            android:drawableLeft="@drawable/ic_like_setting_music"
            android:drawablePadding="20dp"
            android:text="Like"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="566dp"
            android:drawableLeft="@drawable/ic_add_to_plylist"
            android:drawablePadding="20dp"
            android:text="Add To Playlist"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="616dp"
            android:drawableLeft="@drawable/ic_view_album"
            android:drawablePadding="20dp"
            android:text="View Album"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="666dp"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="20dp"
            android:text="Share"
            android:textColor="#FFFF"
            android:textSize="20dp" />



    </RelativeLayout>
