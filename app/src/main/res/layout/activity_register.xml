<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="#1F1F1F"
    >

    <ImageView
        android:layout_width="438dp"
        android:layout_height="438dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gambarregister" />

    <ImageView
        android:id="@+id/rectangle_5"
        android:layout_width="393dp"
        android:layout_height="439dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/bgloginform"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/logomusic"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="355dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logomuiscbox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logomusic"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fullname"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFF"
            android:drawableLeft="@drawable/logo_user"
            android:drawablePadding="15dp"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:textColorLink="#FFFF"
            tools:ignore="TouchTargetSizeCheck"
            android:hint="Full Name"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFF"
            android:drawableLeft="@drawable/logo_email"
            android:drawablePadding="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:textColorLink="#FFFF"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/password"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFF"
            android:drawableLeft="@drawable/logo_password"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:textColorLink="#FFFF"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/confrim_password"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFF"
            android:drawableLeft="@drawable/logo_password"
            android:drawablePadding="15dp"
            android:hint="Confrim Password"
            android:inputType="textPassword"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:textColorLink="#FFFF"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_signup"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="638dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_shape"
        android:text="SIGN UP"
        android:textStyle="bold"
        tools:ignore="OnClick,TouchTargetSizeCheck"
        android:onClick="signup"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/btn_signup"
    android:layout_marginTop="20dp"
    android:gravity="center"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:text="Already have an account ?"
        android:textColor="#ffff" />
    <TextView
        android:id="@+id/txt_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text=" Sign In"
        android:textColor="#FF1818"
    />
    </LinearLayout>




</RelativeLayout>